{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "import_declarations_config",
    "title": "Geometrization configuration",
    "description": "The configuration for the geometrization program",
    "type": "object",
    "properties": {
        "output": {
            "description": "Connection details: access to a database table describing declared photovoltaic installations",
            "type": "object",
            "properties": {
                "host": {
                    "description": "Database hostname",
                    "type": "string",
                    "anyOf": [
                        {
                            "format": "hostname"
                        },
                        {
                            "format": "ipv4"
                        },
                        {
                            "format": "ipv6"
                        }
                    ]
                },
                "port": {
                    "description": "Database host's port",
                    "type": "integer"
                },
                "name": {
                    "description": "Database's name on the host server",
                    "type": "string",
                    "pattern": "^[a-z_]+$"
                },
                "user": {
                    "description": "User's name",
                    "type": "string",
                    "pattern": "^[a-z_]+$"
                },
                "password": {
                    "description": "User's password",
                    "type": "string"
                },
                "schema": {
                    "description": "Name of the schema",
                    "type": "string",
                    "pattern": "^[a-z_]+$"
                },
                "table": {
                    "description": "Name of the table",
                    "type": "string",
                    "pattern": "^[a-z_]+$"
                }
            },
            "additionalProperties": false,
            "required": [
                "host",
                "port",
                "name",
                "user",
                "password",
                "schema",
                "table"
            ]
        },
        "input": {
            "description": "Connection details: access to the GraphQL API of demarches-simplifiees.fr",
            "type": "object",
            "properties": {
                "api_url": {
                    "description": "Root url for the API.",
                    "type": "string",
                    "format": "uri"
                },
                "auth_token": {
                    "description": "Authentification token required to use the API.",
                    "type": "string",
                    "pattern": "^[A-Za-z0-9+~/._-]+=?="
                },
                "demarche_id": {
                    "description": "Identifier for the procedure.",
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "required": [
                "api_url",
                "auth_token",
                "demarche_id"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "input",
        "output"
    ]
}